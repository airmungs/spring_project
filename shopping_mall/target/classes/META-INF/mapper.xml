<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ShoppingMall">

	<!-- 쇼핑몰 회원가입 insert -->
	<insert id="joinOk" parameterType="shopping_client.dto.shopping_clients_dto">
		INSERT INTO clients (userId, password, name, email, phone, eventMail, eventSms)
        VALUES (#{userId}, #{password}, #{name}, #{email}, #{phone}, #{eventMail}, #{eventSms})
	</insert>
	
	<!-- 쇼핑몰 회원가입 ID중복체크 -->
	<select id="clientIdcheck" parameterType="String" resultType="shopping_client.dto.shopping_clients_dto" >
	SELECT * FROM clients WHERE userId=#{userId}
	</select>


</mapper>